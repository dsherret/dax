{
  "tasks": {
    "test": "deno test -A",
    "wasmbuild": "deno run -A https://deno.land/x/wasmbuild@0.14.1/main.ts --sync --out ./src/lib"
  },
  "fmt": {
    "proseWrap": "preserve",
    "lineWidth": 120
  },
  "lint": {
    "rules": {
      "exclude": ["ban-types", "no-explicit-any", "no-this-alias"],
      "include": [
        "no-sync-fn-in-async-fn"
      ]
    }
  },
  "exclude": [
    "target/"
  ]
}
