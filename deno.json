{
  "name": "@david/dax",
  "nodeModulesDir": "none",
  "test": {
    "permissions": {
      "all": true
    }
  },
  "tasks": {
    "dnt": "deno run -A ./scripts/build_npm.ts",
    "test": "deno test -A",
    "wasmbuild": "deno run -A jsr:@deno/wasmbuild@0.19.2 --inline --out ./src/lib"
  },
  "fmt": {
    "proseWrap": "preserve",
    "operatorPosition": "nextLine",
    "lineWidth": 120
  },
  "lint": {
    "rules": {
      "exclude": ["ban-types", "no-explicit-any", "no-this-alias"],
      "include": [
        "no-console",
        "no-sync-fn-in-async-fn"
      ]
    }
  },
  "exclude": [
    ".gitattributes",
    ".gitignore",
    ".github",
    ".rustfmt.toml",
    ".vscode",
    "Cargo.toml",
    "Cargo.lock",
    "npm/",
    "target/"
  ],
  "exports": "./mod.ts",
  "imports": {
    "@david/console-static-text": "jsr:@david/console-static-text@^0.3.0",
    "@deno/dnt": "jsr:@deno/dnt@~0.42.3",
    "@david/path": "jsr:@david/path@0.2",
    "@std/assert": "jsr:@std/assert@1",
    "@std/async": "jsr:@std/async@1",
    "@std/fmt": "jsr:@std/fmt@1",
    "@std/fs": "jsr:@std/fs@1",
    "@std/io": "jsr:@std/io@^0.225",
    "@std/path": "jsr:@std/path@1",
    "which": "jsr:@david/which@~0.4.1",
    "which_runtime": "jsr:@david/which-runtime@^0.2.1"
  }
}
